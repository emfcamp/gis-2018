{
	"stylesheet_path": "./styles",
	"symbol_path": "./symbols",
	"plugins": [],
        "extents": [52.045, -2.37, 52.031, -2.393],
	"zoom_range": [ 7, 20 ],
	"source_projection": "epsg:27700",
	
	"source_file": {
		"site_plan": {
			"path": "../gis/emf2018.dxf",
			"auto_import_layers": "true"
		}
	},

	"mapbox_vector_layer": {
            "attribution": "Â© Electromagnetic Field"
        },

        "plugins": {
            "power": {
                "name": "Electromagnetic Field 2018",
                "layer_prefix": "Power ... ",
                "spec_dir": "../gis/power"
            },
            "stats": {
                "length": [
                    "Heras (internal)",
                    "Heras (perimeter)", 
                    "Lighting ... Festoon"
                ],
                "count": [
                    "Fire ... Fire Blanket",
                    "Fire ... Foam Extinguisher",
                    "Fire ... Water Extinguisher"
                ],
                "area": {
                    "Camping": {
                        "sql": "SELECT ST_Area(wkb_geometry) AS area, camping AS name FROM site_plan WHERE layer = 'Areas ... Camping' AND camping != 'Vehicles'",
                        "density": 18
                    },
                    "Camping Vehicles": {
                        "sql": "SELECT ST_Area(wkb_geometry) AS area, camping AS name FROM site_plan WHERE layer = 'Areas ... Camping' AND camping = 'Vehicles'",
                        "density": 90
                    }
                }
            }
        }
}
